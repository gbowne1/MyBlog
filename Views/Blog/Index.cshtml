@model List<MyBlog.Models.BlogPost>

@{
    ViewData["Title"] = "Blog Posts";
}

<h1>@ViewData["Title"]</h1>

@foreach (var post in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h4 class="card-title">@post.Title</h4>
            <p class="card-text">@post.Content</p>
            <p class="card-text"><small class="text-muted">Posted on @post.CreatedAt.ToLocalTime()</small></p>
        </div>
    </div>
}
